<div class="h-full bg-gray-100">
  <main class="mx-auto max-w-7xl pb-10 lg:py-12 lg:px-8">
    <div class="lg:grid lg:grid-cols-12 lg:gap-x-5">
      <%= render "host/dashboard/sidebar" %>

      <!-- Payment details -->
      <div class="space-y-6 sm:px-6 lg:col-span-9 lg:px-0">
        <div class="overflow-hidden bg-white shadow sm:rounded-md">
          <%= form_with model: @property, url: host_properties_path, local: true do |f| %>
            <div class="shadow sm:overflow-hidden sm:rounded-md">
              <div class="space-y-6 bg-white py-6 px-4 sm:p-6">
                <div>
                  <h3 class="text-lg font-medium leading-6 text-gray-900">Add new Property</h3>
                  <p class="mt-1 text-sm text-gray-500">Use this form to create a new property for hosting.</p>
                </div>

                <div class="grid grid-cols-6 gap-6">
                  <div class="col-span-6 sm:col-span-4">
                    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_field :name, class: "mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
                  </div>

                  <div class="col-span-6 sm:col-span-4">
                    <%= f.label :headline, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_field :headline, class: "mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
                  </div>

                  <div class="col-span-6 sm:col-span-4">
                    <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_area :description, class: "mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
                  </div>

                  <div class="col-span-6 sm:col-span-4">
                    <%= f.label :images, "Image", class: "block text-sm font-medium text-gray-700" %>
                    <%= f.file_field :images %>
                  </div>

                  <div class="col-span-6">
                    <%= f.label :address_1, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_field :address_1, class: "mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
                  </div>

                  <div class="col-span-6">
                    <%= f.label :address_2, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_field :address_2, class: "mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
                  </div>

                  <div class="col-span-6 sm:col-span-6 lg:col-span-2">
                    <%= f.label :city, class: "col-span-6 sm:col-span-6 lg:col-span-2" %>
                    <%= f.text_field :city, class: "mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
                  </div>

                  <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                    <%= f.label :state, class: "col-span-6 sm:col-span-3 lg:col-span-2" %>
                    <%= f.text_field :state, class: "mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
                  </div>

                  <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                    <%= f.label :zip_code, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_field :zip_code, class: "mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
                  </div>
                  
                  <div class="col-span-6 sm:col-span-3">
                    <%= f.label :country_code, class: "block text-sm font-medium text-gray-700" %>
                    <%= f.country_select :country_code, { priority_countries: ["US", "CA"], sort_provided: false }, class: "mt-1 block w-full rounded-md border border-gray-300 bg-white py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
                  </div>

                </div>
              </div>
              <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
                <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Save</button>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
